pipeline {
	agent any
	tools{
		nodejs "NodeJS 19.0.1"
	}
	stages{
		stage('build') {
			when {
				changeset '**/result/**'
			}
			steps {
				echo 'Build stage..'
				dir('result'){
					sh 'npm install'
				}
			}
		}
		stage('test'){
			when {
				changeset '**/result/**'
			}
			steps {
				echo 'Test stage..'
				dir('result'){

					sh 'npm install'
					sh 'npm test'
				}
			}
		}
	}
	post{
		always {
			echo 'Result Job Done !!!'
		}
		failure{
			slackSend(channel: 'ci-cd',message: 'Build Failed - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)')
		}
		success{
			slackSend(channel: 'ci-cd', message: 'Build Succeded - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL|Open>})')
		}
	}
}
